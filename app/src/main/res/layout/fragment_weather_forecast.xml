<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weatherConstraintLayout"
    style="@style/layoutMM">

    <TextView
        android:id="@+id/cityNameW"
        style="@style/layoutWW"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="City"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        style="@style/layoutMW"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityNameW"
        card_view:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/layoutMW">

            <TextView
                android:id="@+id/today"
                style="@style/layoutMW_M88"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:text="@string/today"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewToday"
                style="@style/layoutWW_M88"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/today"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textWeather"
                style="@style/layoutWW"
                android:layout_marginTop="8dp"
                android:text="Text"
                app:layout_constraintStart_toEndOf="@+id/imageViewToday"
                app:layout_constraintTop_toBottomOf="@+id/today"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layoutMM"
    android:background="@android:color/white"
    android:orientation="vertical">

    <HorizontalScrollView
        style="@style/layoutMW"
        android:layout_marginTop="8dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/layoutWM88">

            <FrameLayout
                android:id="@+id/frameLayout1"
                style="@style/layoutMM"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/day1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/nodata"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/temperature1"
                    style="@style/layoutWW"
                    android:layout_gravity="bottom|end"
                    android:background="@android:color/white"
                    android:fontFamily="@font/roboto"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    tools:text="0/0" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout2"
                style="@style/layoutMM"
                app:layout_constraintStart_toEndOf="@+id/frameLayout1"
                app:layout_constraintTop_toTopOf="@+id/frameLayout1">

                <ImageView
                    android:id="@+id/day2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    app:srcCompat="@drawable/nodata"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/temperature2"
                    style="@style/layoutWW"
                    android:layout_gravity="bottom|end"
                    android:background="@android:color/white"
                    android:fontFamily="@font/roboto"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    tools:text="0/0" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout3"
                style="@style/layoutMM"
                app:layout_constraintStart_toEndOf="@+id/frameLayout2"
                app:layout_constraintTop_toTopOf="@+id/frameLayout2">

                <ImageView
                    android:id="@+id/day3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    app:srcCompat="@drawable/nodata"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/temperature3"
                    style="@style/layoutWW"
                    android:layout_gravity="bottom|end"
                    android:background="@android:color/white"
                    android:fontFamily="@font/roboto"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    tools:text="0/0" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout4"
                style="@style/layoutMM"
                app:layout_constraintStart_toEndOf="@+id/frameLayout3"
                app:layout_constraintTop_toTopOf="@+id/frameLayout3">

                <ImageView
                    android:id="@+id/day4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    app:srcCompat="@drawable/nodata"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/temperature4"
                    style="@style/layoutWW"
                    android:layout_gravity="bottom|end"
                    android:background="@android:color/white"
                    android:fontFamily="@font/roboto"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    tools:text="0/0" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout5"
                style="@style/layoutMM"
                app:layout_constraintStart_toEndOf="@+id/frameLayout4"
                app:layout_constraintTop_toTopOf="@+id/frameLayout4">

                <ImageView
                    android:id="@+id/day5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    app:srcCompat="@drawable/nodata"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/temperature5"
                    style="@style/layoutWW"
                    android:layout_gravity="bottom|end"
                    android:background="@android:color/white"
                    android:fontFamily="@font/roboto"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    tools:text="0/0" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/today"
        style="@style/layoutMW"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:text="@string/today"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <LinearLayout
        style="@style/layoutMW"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/todayDayImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/nodata"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/todayDay"
                style="@style/layoutMW"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:text="@string/day"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                style="@style/layoutMW"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/todayDay"
                tools:ignore="NestedScrolling">

                <TextView
                    android:id="@+id/todayDayForecast"
                    style="@style/layoutMW"
                    android:fontFamily="@font/roboto"
                    android:text="@string/forecastText"
                    android:textColor="@android:color/black" />
            </ScrollView>

            <TextView
                android:id="@+id/todayDayTemperature"
                style="@style/layoutMW"
                android:background="@android:color/white"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/todayNightImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/nodata"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/todayNight"
                style="@style/layoutMW"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:text="@string/night"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                style="@style/layoutMW"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/todayNight"
                tools:ignore="NestedScrolling">

                <TextView
                    android:id="@+id/todayNightForecast"
                    style="@style/layoutMW"
                    android:fontFamily="@font/roboto"
                    android:text="@string/forecastText"
                    android:textColor="@android:color/black" />
            </ScrollView>

            <TextView
                android:id="@+id/todayNightTemperature"
                style="@style/layoutMW"
                android:background="@android:color/white"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tomorrow"
        style="@style/layoutMW"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:text="@string/tomorrow"
        android:textColor="@android:color/black"
        android:textSize="18sp" />


    <LinearLayout
        style="@style/layoutMW"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tomorrowDayImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/nodata"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tomorrowDay"
                style="@style/layoutMW"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:text="@string/day"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                style="@style/layoutMW"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tomorrowDay"
                tools:ignore="NestedScrolling">

                <TextView
                    android:id="@+id/tomorrowDayForecast"
                    style="@style/layoutMW"
                    android:fontFamily="@font/roboto"
                    android:text="@string/forecastText"
                    android:textColor="@android:color/black" />
            </ScrollView>

            <TextView
                android:id="@+id/tomorrowDayTemperature"
                style="@style/layoutMW"
                android:background="@android:color/white"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/tomorrowNightImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/nodata"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tomorrowNight"
                style="@style/layoutMW"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:text="@string/night"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                style="@style/layoutMW"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tomorrowNight"
                tools:ignore="NestedScrolling">

                <TextView
                    android:id="@+id/tomorrowNightForecast"
                    style="@style/layoutMW"
                    android:fontFamily="@font/roboto"
                    android:text="@string/forecastText"
                    android:textColor="@android:color/black" />
            </ScrollView>

            <TextView
                android:id="@+id/tomorrowNightTemperature"
                style="@style/layoutMW"
                android:background="@android:color/white"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>
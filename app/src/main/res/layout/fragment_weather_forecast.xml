<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weatherConstraintLayout"
    style="@style/layoutMM">

    <TextView
        android:id="@+id/textViewLocation"
        style="@style/layoutWW"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Location" />

    <androidx.cardview.widget.CardView
        style="@style/layoutMW"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLocation"
        card_view:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/layoutMW">

            <TextView
                android:id="@+id/today"
                style="@style/layoutMW_M88"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:text="@string/today"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewToday"
                style="@style/layoutWW_M88"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/today"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewToday"
                app:layout_constraintTop_toBottomOf="@+id/today">

                <TextView
                    android:id="@+id/textViewDescription"
                    style="@style/layoutWW"
                    android:layout_marginTop="8dp"
                    tools:text="Description" />

                <TextView
                    android:id="@+id/textViewTemp"
                    style="@style/layoutWW"
                    android:layout_marginTop="8dp"
                    tools:text="Temp" />

                <TextView
                    android:id="@+id/textViewFeelsLike"
                    style="@style/layoutWW"
                    android:layout_marginTop="8dp"
                    tools:text="FeelsLike" />

                <TextView
                    android:id="@+id/textViewTempMin"
                    style="@style/layoutWW"
                    android:layout_marginTop="8dp"
                    tools:text="TempMin" />

                <TextView
                    android:id="@+id/textViewTempMax"
                    style="@style/layoutWW"
                    android:layout_marginTop="8dp"
                    tools:text="TempMax" />

                <TextView
                    android:id="@+id/textViewPressure"
                    style="@style/layoutWW"
                    android:layout_marginTop="8dp"
                    tools:text="Pressure" />

                <TextView
                    android:id="@+id/textViewHumidity"
                    style="@style/layoutWW"
                    android:layout_marginTop="8dp"
                    tools:text="Humidity" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>